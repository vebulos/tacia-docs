{
  "name": "mxc-docs",
  "type": "module",
  "version": "1.0.0",
  "description": "MXC Documentation Site",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "ng build --configuration=production",
    "build:dev": "ng build --configuration=development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "server:dev": "node --inspect server/server.js --port=4201 --content-dir=../DATA/content",
    "server:prod": "node server/server.js --port=4201 --content-dir=../DATA/content",
    "client:dev": "ng serve --open --port=4200",
    "start:prod": "node server/server.js --port=4201 --content-dir=../DATA/content",
    "serve:prod": "npm run build && npm run start:prod",
    "serve:static": "npm run build && npx http-server dist/frontend/browser -p 8080"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "http-server": "^14.1.1",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "jsdom": "^26.1.0",
    "localforage": "^1.10.0",
    "marked": "^15.0.12",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.8",
    "@angular/cli": "^19.2.8",
    "@angular/compiler-cli": "^19.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/express": "^4.17.21",
    "@types/highlight.js": "^9.12.4",
    "@types/jasmine": "~5.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/localforage": "^0.0.33",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.19.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.6.0",
    "js-yaml": "^4.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.31",
    "postcss-import": "^16.0.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "~5.7.2"
  }
}
